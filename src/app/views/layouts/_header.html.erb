<header class="page-header wrapper">
  <h1>portfolios-museum</h1>
  <nav>
    <ul class="main-nav">
      <% if user_signed_in? %>
        <nav class="global-nav">
          <ul class="global-nav__list">
            <li class="global-nav__item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
            <li class="global-nav__item"><%= link_to "マイページ", edit_user_registration_path %></li>
            <li class="global-nav__item"><%= link_to "トップページへ", root_path %></li>
          </ul>
        </nav>
        
        <div class="hamburger" id="js-hamburger">
          <span class="hamburger__line hamburger__line--1"></span>
          <span class="hamburger__line hamburger__line--2"></span>
          <span class="hamburger__line hamburger__line--3"></span>
        </div>
        <div class="black-bg" id="js-black-bg"></div>
      <% else %>
        <li><%= link_to "ログイン", new_user_session_path %></li>  
        <li><%= link_to "新規登録", new_user_registration_path %></li>  
        <li><%= link_to "ゲストユーザー", users_guest_sign_in_path, method: :post %></li>   
      <% end %>
    </ul>
  </nav>
<%= javascript_pack_tag "hamburger.js" %>
</header>

















